<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExpenseDetailsActivity">

    <TextView
        android:id="@+id/expense_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginStart="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginEnd="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:text="expense_name" />

    <TextView
        android:id="@+id/expense_amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginStart="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginEnd="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:text="expense_amount" />

    <TextView
        android:id="@+id/expense_dateTextView"
        android:layout_width="wrap_content"
        android:layout_margin="20px"
        android:layout_marginStart="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginEnd="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        android:layout_height="91dp"
        android:text="expense_date" />

</LinearLayout>